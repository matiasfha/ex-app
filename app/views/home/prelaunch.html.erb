        "/assets/landings/landing6.jpeg",
        "/assets/landings/landing7.jpeg",
        "/assets/landings/landing8.jpeg",
        "/assets/landings/landing9.jpeg",
         "/assets/landings/landing10.jpeg",
    ];
    imagenes = shuffle(imagenes);
    $(imagenes).preload();
    

    copyrights[6] = {texto:"© Softwares-sli.com by Bates141 ® International",color:"black"};
    copyrights[7] = {texto:"© Sony Micro Vault by Promoseven ® Dubai",color:"black"};
    copyrights[8] = {texto:"© Confort Santher by Talent ® Sao Paulo, Brazil",color:"white"};
    copyrights[9] = {texto:"© Penalty T-shirt by Z ® Brazil",color:"white"};
    copyrights[10] = {texto:"© GoodYear by Y&R ® Sao Paulo, Brazil",color:"white"};
    
    $('body').on('backstretch.show',function(){
      var img = $('body .backstretch img')
      var src = img.attr('src');
      src     = src.split('.')[0].split('/')[3].split('landing')[1];
      $('#footer').html(copyrights[src].texto).css({color:copyrights[src].color});
      

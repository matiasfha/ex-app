<div class="well span8" style="height: 230px" >
	<div class="span6">
  <h3>Videos Destacados:</h3>
	<ul id="roundabout">
    	<li>
    		<a href="#">
    		<%= image_tag 'square.png' %>
			&nbsp;&nbsp;Título 1
    		</a>
    	</li> 
      <li>
      </li> 
      <li>
      </li> 
    	<li>
    		<a href="#">
    		<%= image_tag 'square.png' %>
    		&nbsp;&nbsp;Título 2
    		</a>
    	</li>
      <% current_user.user_experiment_videos.where(:succeded => 0).all.each do |x| %>
        <% if x.video %>
          <li>
            <a href="<%= show_video_path(x.id) %>">
            <%= image_tag x.video.preview.url %>
            &nbsp;&nbsp;<%= x.video.name %>
          </li>
        <% end %>
      <% end %>
    </ul>	
	</div>
</div>
<div class="well span8" style="height: auto" >
<h3>Otros Videos Para Ti:</h3>
  <% current_user.user_experiment_videos.where('succeded != ?', 0).last(9).each do |x| %>
        <% if x.video %>
          <div class="span2 well" >
            <a href="<%= show_video_path(x.id) %>">
            <%= image_tag x.video.preview.url %>
            &nbsp;&nbsp;<%= x.video.name %>
          </div>
        <% end %>
  <% end %>
  <% (9-current_user.user_experiment_videos.first(9).count).times do %>
  <div class="span2 well" >
    <br><br><br><br><br><br><br>
  </div>
  <% end %>
  <div class="row" >&nbsp;</div>
  

  
</div>
<script language="javascript" type="text/javascript">
    
    $(document).ready(function() {
      

		$('#roundabout').roundabout({
         duration: 700,
         autoplay: true,
         autoplayDuration: 10000,
         btnNext: ".next",
         btnPrev: ".prev"
      	});

    });

</script>
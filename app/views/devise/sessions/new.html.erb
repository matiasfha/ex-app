<%
content_for :main_js do 
  %>
  "/assets/index"
<% end 
content_for :css do %>
<%= stylesheet_link_tag    "empresa", :media => "all" %> 
<style type="text/css">
#nav-access{
	display: none;
}
</style>
<% end %>

<div id="empresas">
	<header>
	    <a href="<%=root_path%>">
	      <h1>Dandoo.tv</h1>
	      </a>
	    <h2>Ingreso de Empresas</h2>
	  </header><!-- fin header -->

	<section class="contenedor">
		

		<%= form_for(resource,:as => resource_name,:url =>session_path(resource_name),:html => {:class =>'stn-form label-inline simple formulario'}) do |f| %>

		  <div class="field">
		  	<%= f.label :email %>
		  	<%= f.email_field :email, :autofocus => true,:size => '25' %>
		  </div>

		  <div class="field relative">
		  	<%= f.label :password,'ContraseÃ±a' %>
		  	<%= f.password_field :password,:size => '10',:class => 'password' %>
		  </div>


		    <div class="field">
		    	<%= f.check_box :remember_me %> 
		    	<%= f.label :remember_me,'Recordarme' %>
		    </div>


		  <div class="actionrow">
		  	<%= f.submit "Ingresar",:class => 'button' %>
		  </div>
		<% end %>
	</section>
	<a href="/" class="back">Volver a la portada</a>
</div>
 <input type="hidden" id="user_id" value="<%=@user.id%>" />
 <%= form_for @user,:html => {:class => 'custom',:style => 'margin-bottom:-50px',:multipart=>true,:method => 'put'} do |f|%>
  
  <div class="row" id="perfil">
    <div class="twelve columns widget" style="left:-15px !important;">
      <div class="row">
         <br /><br />
          <div class="izq" >
            <div class="row">
              <label class="nombre">
                <%= @user.nombre %>
                <%= @user.apellidos %>
              </label>
              <hr />
            </div>
            <div class="row">
              <label><strong>Miembro Dandoo desde:</strong> <%=@user.created_at.strftime("%d de %B de %Y")%></label>
              <br />
            </div>
            <div class="row">
              <div class="avatar">
                <%= image_tag @user.avatar.url(:medium), :id => 'avatar_prev' %>
              </div>
              <div class="buscar">
                <div class="input_buscar"></div>
                <%=f.file_field :avatar%>
                <div class="adjuntar"></div>
              </div>
              <div class="authorizations">
                <label>Conectado a</label>
                <div class="inputs">
                  <% auth = Authentication.where(:user_id => @user.id,:provider => 'twitter').first
                  %> 
                  <input type="checkbox"  <%=(!auth.nil?) ? raw('checked="checked"') : '' %> /><label></label>
                  <label><%=image_tag "usuario/ico_tw.png" %> </label>
                  <br />
                  <% auth = Authentication.where(:user_id => @user.id,:provider => 'facebook').first
                  %> 
                  <input type="checkbox" <%=(!auth.nil?) ? raw('checked="checked"') : '' %>/><label></label>
                  <label><%=image_tag "usuario/ico_fb.png",:class =>'fb' %></label>
                </div>
              </div>
            </div>
            
            <div class="row">
              <br />
              <%=f.text_area :bio,:placeholder => 'Biografía en 140 carácteres' %>
            </div>
            
            <div class="row multiple">
              <div class="four columns">
              <%=f.label :gender, :class => 'right inline'%>
              </div>
              <div class="seven columns">
                <%= f.select :gender_id, options_for_select(Gender.all.map{ |u| [u.descripcion,u.id] },@user.gender_id) %>
              </div>
            </div>

            <div class="row multiple">
              <div class="four columns" style="white-space:nowrap">
              <%=f.label :civil_statu, 'Estado Civil', :class => 'right inline',:style => 'display:inline-block'%>
              </div>
              <div class="seven columns">
                <%= f.select :civil_statu_id, options_for_select(CivilStatu.all.map{ |u| [u.descripcion,u.id] },@user.civil_statu_id) %>
              </div>
            </div>

          </div>

          <div class="center">
            <div class="row">
              <%=f.text_field :email, :required => true,:placeholder => 'Email' %>
            </div>
            <div class="row">
              <%=f.text_field :rut, :class => 'blocked',:placeholder => 'Rut',:disabled =>'disabled'%>
            </div>
            <div class="row">
              <%=f.text_field :nombre, :required => true,:placeholder => 'nombre' %>
            </div>
            <div class="row">
              <%=f.text_field :apellidos, :required => true,:placeholder => 'Apellidos' %>
            </div>
            
            <!-- <div class="row">
              <%=f.password_field :password,:placeholder => 'Password'%>
            </div>
            <div class="row">
              <%=f.password_field :password_confirmation,:placeholder => 'Confirme Password'%>
            </div> -->

            <div class="row multiple">
              <div class="two columns">
              <%=f.label :nacimiento, :class => 'right inline'%>
              </div>
              <div class="nine columns">
                <%=f.text_field :nacimiento, :class => 'date', :value => @user.nacimiento.strftime("%d/%m/%Y"),:disabled => 'disabled' %>
              </div>
            </div>
            <div class="row multiple">
              <div class="two columns">
                <%=f.label :country,'País', :class => 'right inline'%>
              </div>
              <div class="nine columns">
                <%= f.select :country_id, options_for_select(Country.all.order_by([[:nombre,:asc]]).map{ |u| [u.nombre,u.id] },@user.country_id) %>
              </div>
            </div>
            <div class="row multiple">
              <div class="one columns">
                <%=f.label :state,'Región',:class => 'right inline'%>
              </div>
              <div class="nine columns">
                <%= f.select :state_id, options_for_select(State.all.order_by([[:nombre,:asc]]).map{|u| [u.nombre,u.id]},@user.state_id) %>
              </div>
            </div>

            <div class="row multiple">
              <div class="one columns">
                <%=f.label :commune,'Comuna',:class => 'right inline'%>
              </div>
              <div class="nine columns">
                <%= f.select :commune_id,  options_for_select(Commune.all.order_by([[:nombre,:asc]]).map{|u| [u.nombre,u.id]},@user.commune_id) %>
              </div>
            </div>

            <div class="row multiple">
              <div class="one columns">
                <%=f.label :city,'Ciudad',:class => 'right inline'%>
              </div>
              <div class="nine columns">
                 <%= f.select :city_id,  options_for_select(City.all.order_by([[:nombre,:asc]]).map{|u| [u.nombre,u.id]},@user.city_id) %>
              </div>
            </div>

             <div class="row multiple">
              <div class="one columns">
                <%=f.label :ocupacion,:class => 'right inline'%>
              </div>
              <div class="nine columns">
                 <%= f.select :ocupacion_id, options_for_select(Ocupacion.all.order_by([[:nombre,:asc]]).map{|u| [u.nombre,u.id]},@user.ocupacion_id) %>
              </div>
            </div>

          </div>

          <div class="right">
            <div class="row">
              <div class="info_pts">
                <label class="ranks"><%=Voto.where(:user_id => @user.id).count %></label>
                <label class="favs"><%=Resource.where(:liker_ids => @user.id).count %></label>
                <label class="doos"><%=@user.doos%></label>
              </div>
            </div>
          </div>
        </div>

      <div class="row">
        <div class="twelve columns">
          <fieldset>
            <legend>Tus Intereses</legend>
            <% 
            k=0
            Interest.all.order_by([[:nombre,:asc]]).each_with_index do |i,j|
              if k==0
                %>
                <div class="row">
                <%
              end   
              %>
              <div class="columna" > 
                <label><%=i.nombre%></label>
                <%
                c = @user.user_interests.where(:interest_id => i.id).first
                if !c.nil? %>
                  <%= check_box_tag "user[user_interests_attributes][#{j}][interest_id]",i.id,:checked => 'checked'%>
                <%
                else
                  %>
                  <%= check_box_tag "user[user_interests_attributes][#{j}][interest_id]",i.id%>
                  <%
                end
                %>
              </div><!--columna-->
              <%
              k=k+1
              if k==4
                %>
                </div><!--row-->
                <%
                  k=0
              end
            end
            %>
          </fieldset>
        </div><!--twelve-->
      </div><!--row-->

      <div class="row">
        <br />
        <br />
        <%=f.submit :id => 'commit_user',:value => '' %>
      </div>

    </div>
  </div>

<% end %>
<div class="modal hide fade" id="modal-form">
  <% if current_user.id == @user.id %>
    <div class="modal-header">
      
      <h3>Nueva publicidad</h3>
    </div>
    <div class="modal-body">
    <%= semantic_form_for(@resource,:html => {:multipart => true,:class=>'form form-horizontal',:remote => true}) do |f| %>
      <div class="control-group">
        <%=f.label :titulo, :class =>'control-label'%>
        <div class="controls">
        <%=f.text_field :titulo, :placeholder => 'Titulo',:required => true %>
        </div>
      </div>
      <div class="control-group">
        <%=f.label :descripcion, :class =>'control-label'%>
        <div class="controls">
          <%=f.text_field :descripcion, :placeholder => 'Descripcion',:required => true %>
        </div>
      </div>
      <%=f.hidden_field :type %>
      <div class="control-group">
        <%=f.label :url,"Video (Youtube/Vimeo)", :class =>'control-label'%>
        <div class="controls">
          <%=f.text_field :url, :placeholder => 'URL del video con http://' %>
        </div>
      </div>
      <div class="control-group">
        <%=f.label :imagen,"Subir una imagen", :class =>'control-label'%>
        <div class="controls">
          <%=f.file_field :imagen %>
        </div>
      </div>
    </div>
    <div class="modal-footer">  
      <%= f.submit "Agregar", :class => "btn btn-inverse",:id => 'subir_recurso' %>
      <input type="reset" value="Cancelar" class="btn" data-dismiss="modal" id="cancelar"/>
  </div>
  <% end %>
  
  <% end %>
</div><!--modal-->


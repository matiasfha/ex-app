<!DOCTYPE html>
<html>
<head>
  <title>Alzheimer</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="user_nav">
  <% if current_user %>
    Ingresado como <%= current_user.email %>.
    <%= link_to "Cierra Sesión", log_out_path, :class => 'btn btn-primary' %>
  <% else %>
    <%= link_to "Regístrate", sign_up_path, :class => 'btn btn-primary' %> o
    <%= link_to "Ingresa", log_in_path, :class => 'btn btn-primary' %>
  <% end %>
</div>

<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "flash_#{name}" %>
<% end %>

<%= yield %>

</body>
</html>

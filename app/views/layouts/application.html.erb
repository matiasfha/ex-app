<!DOCTYPE html>
<html>
<head>
  <title>Alzheimer</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <style type="text/css">
  body
	{
		padding: 40px 0px 40px 0px;
		background-image: url("/assets/420.gif");
	}
  
  form.center
  {
  	width: 400px;
  	margin: 50px auto 50px auto;
  }
  </style>
</head>
<body>
<section class="container hero-unit">
<%= gflash %>

  <% if (controller.controller_name == 'sessions')&&(controller.action_name == 'new') %>
    <div class="row clear">&nbsp;</div>
    <a href="<%= root_path %>" style=" text-decoration: none">
  	  <h1 style="text-align: center; margin-top: 0px">Alzheimer</h1>
    </a>
  <% else %>
    <div class="row">
    <div id="user_nav" class="span5 pull-right">
    <span class="pull-right">
      <% if current_user %>
        Bienvenido! <b><%= current_user.first_name.to_s+' '+current_user.last_name.to_s %></b> - 
        <%= link_to "Edita tu Perfil", edit_user_path(current_user.id, :not_new => true) %> o <%= link_to "Cierra Sesión", log_out_path %>
      <% else %>
        
      <% end %>
      </span>
    </div>
    <div id="user_nav" class="span7 pull-left">
      <a href="<%= root_path %>" style=" text-decoration: none">
        <h1>Alzheimer</h1>
      </a>
    </div>
    </div>
    <div class="row" >&nbsp;</div>
  <% end %>
	<%= yield %>
  <div class="row">&nbsp;</div>
  <div class="row">&nbsp;</div>
  <div class="row">&nbsp;</div>
  <div class="row">&nbsp;</div>
</section>
<section class="container hero-unit" style="height: 0px; ">
    <div class="row top-round-bordered bottom-round-bordered" style="margin-top: -20px;margin-bottom: 20px;padding: -50px;">
      <pre style="width: 960px; color:#444"> <i style="height: 50px"> ©Todos los derechos reservados <a href="<%= root_path %>">POS</a> <%= Time.now.year.to_s %> </i> <i class="pull-right"> Powered by <a href="http://www.brainshots.cl">Brainshots&nbsp;<img src="/assets/logo_schof2.png" style="height: 20px; margin-bottom: -5px"></a>  </i></pre>    
    </div>
</section>


</body>
</html>

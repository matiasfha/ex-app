<%
@resources.each do |resource|
    %>
<article id="<%=resource.id%>" class="post-1 category-blog-posts entry box format-video">
    <div class="entry-content-cnt">
        <div class="entry-content">
               <% 
               img = resource.imagen.url(:large)
               dimensions = Paperclip::Geometry.from_file(img) %>
                <%=image_tag img, :class =>"attachment-ci_listing_thumb", :width =>dimensions.width,:height =>dimensions.height %>
            <%if resource.type=='video' %>
                <img src="/assets/play_03.png" class="play_image" />
            <% else %>
                <div class="zoomOverlay"></div>
            <% end %>
        </div>
    </div>

    <div class="entry-desc">
        <h1><a href="#" title="Titulo"><%=resource.titulo%></a></h1>
        <div class="entry-meta group">
         <a class="comments-no" href="#"><%=resource.comments.count%></a> <a data-post-id="213" class="heart-this loved" href="#" title="Me gusta">
         <span class="heart-no"><%=Resource.promedio_votos(resource.id).round %> / <%=pluralize resource.votos.count , "Voto"%> </span></a>
        </div>
    </div>
</article>
<% end %>
 <%
@resources.each do |resource|
    %>
<article id="<%=resource.id%>" class="post-1 category-blog-posts entry box format-video">
    <div class="entry-content-cnt">
        <div class="entry-content">
                <% 
            img = resource.imagen.url(:large)
            dimensions = Paperclip::Geometry.from_file(img) %>
            <%=image_tag img, :class =>"attachment-ci_listing_thumb", :width =>dimensions.width,:height =>dimensions.height %>
                <%
                clase=""
                if resource.type=='video' 
                    clase="video"%>
                    <img src="/assets/play_03.png" class="play_image" width="45px" height="45px"/>
                <% end %>
                    <div class="zoomOverlay <%=clase%>" >
                        <div id="compartirAD" >
                          <ul>
                            <li style="padding-right:10px;">Compartir</li>
                            <li>
                              <%
                                bitly = Bitly.new(ENV['BITLY_USER'],ENV['BITLY_KEY']) 
                                page_url = bitly.shorten("#{request.protocol}#{request.host_with_port}#{request.fullpath}resources/#{resource.id}") 
                                shorten_url = page_url.short_url
                              %>
                              <a href="https://twitter.com/share?url=<%=shorten_url%>&text=Mira este comercial!! Está buenísimo!! ||<%=resource.titulo%>&via=Dandootv&lang=es&related=Dandootv&count=none&hashtags=#Dandoo" class="icon-small ctwitter">
                                <img src="/assets/twitter3.png" width="32" height="32" alt="">
                              </a>
                            </li>
                            <li>
                              <a href="https://www.facebook.com/dialog/feed?app_id=<%=ENV['FACEBOOK_KEY']%>&link=<%=shorten_url%>&picture=<%=resource.imagen.url(:large)%>&name=Mira este comercial!! Está buenísimo!! ||<%=resource.titulo%>&caption=Dandoo.tv&description=<%=resource.descripcion%>&redirect_uri=<%="#{request.protocol}#{request.host_with_port}#{request.fullpath}"%>" class="icon-small cfacebook">
                                <img src="/assets/facebook2.png" width="32" height="32" alt="">
                              </a>
                            </li>
                          </ul>
                        </div>
                    </div>
        </div>
    </div>

    <div class="entry-desc">
        <h1><a href="#" title="Titulo"><%=resource.titulo%></a></h1>
        <div class="entry-meta group">
         <a class="comments-no" href="#"><%=resource.comments.count%></a> 
         <a data-post-id="213" class="heart-this loved" href="#" title="Me gusta">
         <span class="heart-no" data-total="<%=resource.votos.count %>"><%=Resource.promedio_votos(resource.id).round %> / <%=pluralize resource.votos.count , "Voto"%></span></a>
        </div>
    </div>
</article>
<% end %>
<div class="list">
<% if @comentarios.length > 0 %>

	<%= render :partial => "comments/list_comments", :locals => {comentarios:@comentarios,resource_id:@resource.id} %>
<% end %>
</div>

<% if user_signed_in? %>
<div class="row new-comment" >
	<div class="span1 user-thumb">
		<%=image_tag(current_user.avatar.url(:thumb),:class => "thumb") %>
	</div>
	<% if user_signed_in? %>
	<div class="user-comment" style="height:auto">
    	<%= form_for @comentario, :remote => true,:html => {:class => "form-horizontal"} do |f| %>
    		
    		<%=f.text_area :contenido, :rows => 3,:cols => 42%>
    		<%=f.hidden_field :resource_id, :value => @resource.id %>
    		<%= f.submit "Comentar",:class => "btn btn-inverse" %>
    		
    	<% end %>
    </div>
    <% end %>
</div>
<% end %>
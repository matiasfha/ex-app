<div class="visor-modal">
  <div class="inner">
    <div class="row">
      <div class="span8">
        <div class="titulo">
          <%=@resource.titulo%>
        </div>
        <div class="image_holder">
          <% if @resource.type == "imagen" %>    
            <%= link_to image_tag(@resource.imagen.url(:large), :width => "700px"), @resource.imagen.url(:original),:target => 'blank' %>
          <% else %>
            <% if @resource.provider!='' %>
              <div id="resource-large-<%=@resource.id%>">
                <%=@resource.html.html_safe%>
              </div>
              <script type="text/javascript">
              $(document).ready(function(){
                var iframe = $("#resource-large-<%=@resource.id%> iframe")
                iframe.attr('width','700px');
                iframe.attr('height','490px');
              });
              </script>
            <% else %>
              <div id="resource-large-<%=@resource.id%>">
                Cargando video
              </div>
              <script type="text/javascript">
              $(document).ready(function(){
                loadPlayer_large(
                  "resource-large-<%=@resource.id%>",
                  "<%=@resource.url%>",
                  "<%=@resource.thumbnail%>"
                );
              });
                
              </script>
            <% end %>
          <% end %>
        </div>
        <div class="buttons">
          <% 
          style=""
          if user_signed_in?
            like = @resource.likers.where(:id => current_user.id)
            if like.count > 0
              style="active"
            end 
          end%> 
          <div class="btn-like <%=style%>" data-id="<%=@resource.id%>"></div>
          <div class="btn-comentar"></div>


          <a href="https://twitter.com/share?url=<%="#{request.protocol}#{request.host_with_port}#{request.fullpath}resources/#{@resource.id}"%>&text=<%=@resource.titulo%>&via=Dandootv&lang=es&related=Dandootv&count=none&hashtags=#Dandoo" target="_blank"><div class="btn-twitter"></div></a>

          <a href="https://www.facebook.com/dialog/feed?app_id=487202541299703&link=<%="#{request.protocol}#{request.host_with_port}#{request.fullpath}resources/#{@resource.id}"%>&resource=<%=@resource.imagen.url(:medium)%>&name=<%=@resource.titulo%>&caption=Dandoo.tv&description=<%=@resource.descripcion%>&redirect_uri=<%="#{request.protocol}#{request.host_with_port}#{request.fullpath}"%>">
            <div class="btn-facebook"></div></a>
        </div>
      </div>
    
    
    <div class="row">
      <div class="span8">
         <%= render :partial => 'resources/rating_container',:locals => {:resource => @resource} %>
        
        </div>
      </div>
    </div>
    <div class="row">
      <div class="span8">
        
         <div class="botonera">
          <div class="comments pull-left">
            <span class="like-count">
              <i class="heart"></i><%=@resource.likers.count%>
            </span>
            <span class="comment-count">
              <i class="comment"></i><span><%=@resource.comments.count%></span>
            </span>
          </div>

          <div class="votos pull-right">
            <% total = @resource.votos.count
            promedio = Resource.promedio_votos(@resource.id)
            nota = promedio.round
            for i in 1..nota
              %><div class="mini-star"></div><%
            end
            for i in nota...5
              %><div class="mini-star2"></div><%
            end
            %>
            <div class="votos_result">
               <%= promedio %> 
              / 
              <%= total %>
            </div>
          </div>
        </div>

      </div>
    </div>

    <div class="row">
      <div class="span8">
        <div class="descripcion">
          <div class="thumb">
            <% begin 
            user = User.find(@resource.user_id)
            %>
            <%= image_tag user.avatar.url(:thumb), :size => "42x42",:class => 'img-rounded thumb' %>
             <% rescue %>
            <%= image_tag 'default_user.png',:size => "32x32",:class => 'thumb img-rounded'%>
            <% end %>
          </div>

          <div class="desc">
            <div class="autor">
              <% begin %>
                <%=User.find(@resource.user_id).nombre%>
              <% rescue %>
                Dandoo.tv
              <% end %>
            </div>
            <%=@resource.descripcion %>
          </div>

        </div>
      </div>
    </div>

    <div class="row">
      <div class="span8">
        <div class="comentarios">
          <div class="listado">
          <% @resource.comments.order_by([[:created_at, :desc]]).limit(2).each do |comentario| %>
          <div class="fila">
            <div class="thumb">
              <% begin 
                user = User.find(comentario.user_id) 
              %>
                <%= image_tag user.avatar.url(:thumb),:size => "42x42", :class => "thumb img-rounded" %>
              <% rescue %>
                <%=image_tag 'default_user.png',:class => "thumb img-rounded", :size => "42x42" %>
              <% end %>
            </div>
            <div class="desc">
              <div class="autor">
              <% begin %>
                <%=User.find(comentario.user_id).nombre%>
              <% rescue %>
                
              <% end %>
              </div>
              <div class="fecha">
                <%=comentario.created_at.strftime("%d-%m-%Y / %I:%M:%S %p") %>

              </div>
              <div style="clear:both;width:100%">
                <%= comentario.contenido %>
              </div>
            </div>
          </div>
          <% end %>
        </div><!--listado-->

          <% if user_signed_in? %>
          <div class="fila">
            <div class="thumb">
              
              <%= image_tag current_user.avatar.url(:thumb), :size => "42x42",:class => 'img-rounded thumb' %>
            </div>
            <div class="desc">
              <div class="autor">
                <%=current_user.nombre%>
              </div>
              <input type="text" class="span7 comentar_modal" data-id="<%=@resource.id%>" placeholder="Ingresa tu comentario" maxlength="140">
            </div>
          </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
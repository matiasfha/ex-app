<div class="item" id="<%=@resource.id%>">
      <div class="holder">
        <div class="image_holder">
        <%= render :partial => 'resources/image_overlay',:locals => {:resource => @resource} %>
        <% if @resource.type == "imagen" %>    
        <%= link_to image_tag(@resource.imagen.url(:medium),:class => "@resource"), resource_path(@resource), :class => '@resource'%>
          
        <% else %>

          <% if @resource.provider!='' %>
            <div id="@resource-<%=@resource.id%>">
              <%=@resource.html.html_safe%>
            </div>
            <script type="text/javascript">
              $(document).ready(function(){
                var iframe = $("#resource-<%=@resource.id%> iframe")
                iframe.attr('width','333px');
                iframe.attr('height','270px');
              });
            </script>
          <% else %>
            <div id="@resource-<%=@resource.id%>">
              Cargando archivo de video</div>
            <script type="text/javascript">
              $(document).ready(function(){
                loadPlayer(
                  "resource-<%=@resource.id%>",
                  "<%=@resource.url%>",
                  "<%=@resource.thumbnail%>"
                );  
              });
            </script>
          <% end %>
        <% end %>
        </div>
        <%= render :partial => 'resources/rating_container',:locals => {:resource => @resource} %>
        <div class="separador"></div>
      </div><!--holder -->

      <div class="botonera">
          <div class="comments pull-left">
            <span class="like-count">
              <i class="heart"></i><%=@resource.likers.count%>
            </span>
            <span class="comment-count">
              <i class="comment"></i><span><%=@resource.comments.count%></span>
            </span>
          </div>

          <div class="votos pull-right">
            <% total = @resource.votos.count
          promedio = Resource.promedio_votos(@resource.id)
          nota = promedio.round
          for i in 1..nota
            %><div class="mini-star"></div><%
          end
          for i in nota...5
            %><div class="mini-star2"></div><%
          end
          %>
            <div class="votos_result">
               <%= promedio %> 
            / 
            <%= total %>
            </div>
          </div>
      </div>

      <div class="separador"></div>

      <div class="flecha_desplegar">
      </div>

      <div class="separador"></div>

      <div class="extra">
        <div class="descripcion">
          <div class="thumb">
            <% begin 
            user = User.find(@resource.user_id)
            %>
            <%= image_tag user.avatar.url(:thumb), :size => "32x32",:class => 'img-rounded thumb' %>
             <% rescue %>
            <%= image_tag 'default_user.png',:size => "32x32",:class => 'thumb img-rounded'%>
            <% end %>
          </div>

          <div class="desc">
            <div class="autor">
              <% begin %>
                <%=User.find(@resource.user_id).nombre%>
              <% rescue %>
                Dandoo.tv
              <% end %>
            </div>
            <%=@resource.descripcion %>
          </div>
        </div> 


        <div class="comentarios">
          <% @resource.comments.order_by([[:created_at, :desc]]).limit(2).each do |comentario| %>
          <div class="fila">
            <div class="thumb">
              <% begin 
                user = User.find(comentario.user_id) 
              %>
                <%= image_tag user.avatar.url(:thumb),:size => "32x32", :class => "thumb img-rounded" %>
              <% rescue %>
                <%=image_tag 'default_user.png',:class => "thumb img-rounded", :size => "32x32" %>
              <% end %>
            </div>
            <div class="desc">
              <div class="autor">
              <% begin %>
                <%=User.find(comentario.user_id).nombre%>
              <% rescue %>
                
              <% end %>
              </div>
              <div class="fecha">
                <%=comentario.created_at.strftime("%d-%m-%Y / %I:%M:%S %p") %>

              </div>
              <div style="clear:both;width:100%">
                <%= comentario.contenido %>
              </div>
            </div>
          </div>
          <% end %>

          <% if user_signed_in? %>
          <div class="fila">
            <div class="thumb">
              <%= image_tag current_user.avatar.url(:thumb), :size => "32x32",:class => 'img-rounded thumb' %>
            </div>
            <div class="desc">
              <div class="autor">
                <%=current_user.nombre%>
              </div>
              <input type="text" class="span3 comentar" data-id="<%=@resource.id%>" placeholder="Ingresa tu comentario" maxlength="140">
            </div>
          </div>
          <% end %>
        </div>
      </div>
         

  </div>  
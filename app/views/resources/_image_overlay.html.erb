<div class="overlay">
  <div class="up">
    
    <a href="https://www.facebook.com/dialog/feed?app_id=<%=ENV['FACEBOOK_KEY']%>&link=<%="#{request.protocol}#{request.host_with_port}#{request.fullpath}resources/#{resource.id}"%>&resource=<%=resource.imagen.url(:medium)%>&name=<%=resource.titulo%>&caption=Dandoo.tv&description=<%=resource.descripcion%>&redirect_uri=<%="#{request.protocol}#{request.host_with_port}#{request.fullpath}"%>">
    <div class="btn-facebook"></div></a>

    <a href="https://twitter.com/share?url=<%="#{request.protocol}#{request.host_with_port}#{request.fullpath}resources/#{resource.id}"%>&text=<%=resource.titulo%>&via=Dandootv&lang=es&related=Dandootv&count=none&hashtags=#Dandoo" target="_blank"><div class="btn-twitter"></div></a>
    
    
    <div class="btn-comentar"></div>
    <% 
    style=""
    if user_signed_in?
      like = resource.likers.where(:id => current_user.id)
	   
	    if like.count > 0
	      style="active"
	    end 
    end%> 
    <div class="btn-like <%=style%>" data-id="<%=resource.id%>"></div>
  </a>
    
  </div>
</div>

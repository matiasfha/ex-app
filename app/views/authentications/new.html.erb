	        <div class="actionrow">
	        	<div id="go_paso3" class="button">Guardar</div>
		    </div> 
	        <br>  
        
        </section><!-- fin section -->    
        <div id="recaptcha_modal">
	      <%=recaptcha_tags :ajax => true%>
	    </div>

       <% end %> 
        
        <ul class="pasos">
	    <li><div class="paso-off" id="ir_paso1"></div></li>
	    <li><div class="paso-on" id="ir_paso2"></div></li>
	    <li><div class="paso-on"></div></li>
	  </ul>


	<a href="/" class="back" style="color:black">Volver a la portada</a>
	                      
        <footer>
        </footer><!-- fin footer -->
</div><!-- fin container -->
<div class="descripcion">
	<div class="thumb">
		{{#if user_avatar}}
			<a href="/users/{{user_id}}">
				<img src="{{user_avatar}}" width="32" height="32" class="img-rounded thumb" />
			</a>
		{{else}}
			<img src="/assets/default_user.png" width="32" height="32" class="img-rounded thumb" />
		{{/if}}
	</div>
	<div class="desc">
		<div class="autor">
			{{#if user_nickname}}
			<a href="/users/{{user_id}}">
				{{user_nickname}}
			</a>
			{{else}}
				Dandoo.tv
			{{/if}}
		</div>
		{{this.descripcion}}
	</div>
</div>